{
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14.8.0"
  },
  "type": "module",
  "scripts": {
    "build": "run-s clean test lint format bundle field",
    "bundle": "rollup -c --environment NODE_ENV:production",
    "field": "update-package-field",
    "dev": "rollup -cw",
    "clean": "del \"packages/*/dist\"",
    "format": "prettier --write .",
    "lint": "eslint --ext .ts,.tsx --fix .",
    "test": "jest --passWithNoTests"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "react-hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "ignorePatterns": [
      "**/dist/**"
    ],
    "rules": {
      "no-var": "error",
      "import/no-absolute-path": "error",
      "import/no-dynamic-require": "error",
      "import/no-webpack-loader-syntax": "error",
      "import/no-self-import": "error",
      "import/no-useless-path-segments": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "padding-line-between-statements": [
        "warn",
        {
          "blankLine": "always",
          "prev": "import",
          "next": "*"
        },
        {
          "blankLine": "any",
          "prev": "import",
          "next": "import"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "export"
        },
        {
          "blankLine": "any",
          "prev": "export",
          "next": "export"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": [
            "class",
            "function",
            "block",
            "block-like",
            "multiline-expression",
            "multiline-const",
            "multiline-let"
          ]
        },
        {
          "blankLine": "always",
          "prev": [
            "class",
            "function",
            "block",
            "block-like",
            "multiline-expression",
            "multiline-const",
            "multiline-let"
          ],
          "next": "*"
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^@mo36924/([^/]+)/?": "<rootDir>/packages/$1/src/"
    },
    "snapshotSerializers": [
      "jest-snapshot-serializer-babel",
      "jest-snapshot-serializer-graphql",
      "jest-snapshot-serializer-preact",
      "jest-snapshot-serializer-raw"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-react-constant-elements": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/pluginutils": "^4.1.0",
    "@types/accepts": "^1.3.5",
    "@types/babel__preset-env": "^7.9.1",
    "@types/cookie": "^0.4.0",
    "@types/encodeurl": "^1.0.0",
    "@types/http-errors": "^1.8.0",
    "@types/http-proxy": "^1.17.5",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.36",
    "@types/node-fetch": "^2.5.8",
    "@types/pg": "^7.14.11",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/reserved-words": "^0.1.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/parser": "^4.19.0",
    "accepts": "^1.3.7",
    "babel-plugin-minify-dead-code-elimination": "^0.5.1",
    "babel-plugin-resolve-subpath": "npm:@mo36924/babel-plugin-resolve-subpath@1.1.7",
    "base64url": "^3.0.1",
    "change-case": "^4.1.2",
    "chokidar": "^3.5.1",
    "commander": "^7.2.0",
    "cookie": "^0.4.1",
    "create-package": "npm:@mo36924/create-package@1.1.2",
    "del-cli": "^3.0.1",
    "encodeurl": "^1.0.2",
    "enhanced-resolve": "^5.7.0",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "express-graphql": "^0.12.0",
    "fast-glob": "^3.2.5",
    "graphql": "^15.5.0",
    "http-errors": "^1.8.0",
    "http-proxy": "^1.18.1",
    "jest": "^26.6.3",
    "jest-snapshot-serializer-babel": "npm:@mo36924/jest-snapshot-serializer-babel@1.0.11",
    "jest-snapshot-serializer-graphql": "npm:@mo36924/jest-snapshot-serializer-graphql@1.0.11",
    "jest-snapshot-serializer-preact": "npm:@mo36924/jest-snapshot-serializer-preact@1.0.11",
    "jest-snapshot-serializer-raw": "npm:@mo36924/jest-snapshot-serializer-raw@1.0.18",
    "lerna": "^4.0.0",
    "magic-string": "^0.25.7",
    "mime-types": "^2.1.29",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "pg": "^8.5.1",
    "pluralize": "^8.0.0",
    "preact": "^10.5.13",
    "preact-render-to-string": "^5.1.16",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ssr-prepass": "^1.4.0",
    "reserved-words": "^0.1.2",
    "rollup": "^2.42.4",
    "rollup-plugin-dts": "^3.0.1",
    "ts-jest": "^26.5.4",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "update-package-field": "npm:@mo36924/update-package-field@1.1.49",
    "uuid": "^8.3.2"
  }
}
